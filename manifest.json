{
  "manifest_version": 3,
  "name": "GitHub Project Enhancement",
  "version": "1.0",
  "description": "Enhance GitHub Projects with column and assignee totals.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.jpg",
      "48": "images/icon48.jpg",
      "128": "images/icon128.jpg"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/orgs/*/projects/*"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
